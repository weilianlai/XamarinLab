<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFCustFont.Views.MainPage"
             xmlns:customControls="clr-namespace:XFCustFont.CustomControls"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="FontAwesome"
               x:TypeArguments="x:String"
               iOS="fontawesome"
               Android="fontawesome"
               WinPhone="/Assets/Fonts/fontawesome.ttf#FontAwesome" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Xamarin.Forms" FontSize="30"
             HorizontalTextAlignment="Center"
             TextColor="#a64dff"
             />
            <StackLayout
                Orientation="Vertical" HorizontalOptions="Center">
                <customControls:FontAwesomeLabel
                    Text="&#xf0a8;"
                    TextColor="#ff3333"
                    HorizontalOptions="Center"
                    FontSize="60"
                    Margin="0,0,20,0"
                    />

                <StackLayout
                    Orientation="Horizontal">
                    <customControls:FontAwesomeLabel
                        Text="&#xf063;"
                        TextColor="#bbbbbb"
                        HorizontalOptions="Start"
                        FontSize="20"
                        Margin="0,0,20,0"
                    />
                    <Label
                        Text="下載"
                        TextColor="#bbbbbb"
                        FontSize="20"/>
                </StackLayout>

                <StackLayout
                    Margin="0,20,0,0"
                    Orientation="Horizontal">
                    <customControls:FontAwesomeLabel
                        Text="&#xf236;"
                        TextColor="#bbbbbb"
                        HorizontalOptions="Start"
                        FontSize="20"
                        Margin="0,0,20,0"
                    />
                    <Label
                        Text="請假"
                        TextColor="#bbbbbb"
                        FontSize="20"/>
                </StackLayout>

                <StackLayout
                    Margin="0,20,0,0"
                    Orientation="Horizontal">
                    <customControls:FontAwesomeLabel
                        Text="&#xf1fe;"
                        TextColor="#bbbbbb"
                        HorizontalOptions="Start"
                        FontSize="20"
                        Margin="0,0,20,0"
                    />
                    <Label
                        Text="統計報表"
                        TextColor="#bbbbbb"
                        FontSize="20"/>
                </StackLayout>

            </StackLayout>

        </StackLayout>
    </Grid>

</ContentPage>